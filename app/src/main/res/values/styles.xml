<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionBarStyle">@style/AppBarOverlay</item>
    </style>

    <style name="tab_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppBarOverlay" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="whiteTextTitle">
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textSize">@dimen/large_text_title</item>
    </style>

    <style name="redTextTitle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/mid_text_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="whiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/mid_text_title</item>
    </style>
    <style name="BlackText">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:textSize">@dimen/mid_text_title</item>
    </style>
    <style name="whiteTextSmall">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sml_text_title</item>
    </style>

    <style name="whiteTextLarge">
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_height">52dp</item>
        <item name="android:textSize">@dimen/large_text</item>
    </style>
    <style name="TextLabel_White" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/white</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    </style>


    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/black_color</item>
        <item name="android:textSize">20sp</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="textviewLayoutCUstome">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="edittextCustom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:backgroundTint">@color/colorTextDisable</item>
        <item name="android:textSize">14dp</item>
    </style>

</resources>
