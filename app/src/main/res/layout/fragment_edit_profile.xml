<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F2F4F7"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvCOmpleteProfile"
            android:layout_width="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Complete Profile"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:civ_border_width="5dp"
                app:civ_border_color="@color/white"
                android:src="@drawable/avatar"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    style="@style/textviewLayoutCUstome">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtBusinesName"
                        style="@style/edittextCustom"
                        android:backgroundTint="@color/colorTextDisable"
                        android:hint="Business Name"
                        android:inputType="textPersonName"
                        android:textColorHint="@color/white" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tliOrgId"
                    style="@style/textviewLayoutCUstome"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtMobile"
                        style="@style/edittextCustom"
                        android:hint="Business Mobile"
                        android:inputType="phone"
                        android:backgroundTint="@color/colorTextDisable"
                        android:textColorHint="@color/white" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/textviewLayoutCUstome"
            android:background="@drawable/border_spinner_background"
>
            <Spinner
                android:id="@+id/spnrCatBusiness"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorGray"
                android:hint="Category of Business"
                android:layout_height="35dp"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/textviewLayoutCUstome"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edtWebsiteLIsnk"
                style="@style/edittextCustom"
                android:hint="Website URL"
                android:inputType="textUri"
                android:textColorHint="@color/white" />

        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:background="@drawable/border_spinner_background"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/V5dip"
                android:layout_height="35dp">
                <Spinner
                    android:id="@+id/spnrCity"
                    android:layout_width="match_parent"
                    android:hint="Category of Business"
                    android:backgroundTint="@color/colorGray"
                    android:layout_height="35dp"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/border_spinner_background"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/V5dip"
                android:layout_height="35dp">
            <Spinner
                android:id="@+id/spnrArea"
                android:layout_width="0dp"
                android:hint="Category of Business"
                android:layout_weight="1"
                android:backgroundTint="@color/colorGray"
                android:layout_height="35dp"/>
            </LinearLayout>
        </LinearLayout>
        <!--<android.support.v7.widget.CardView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="@dimen/V10dip"-->
            <!--app:cardBackgroundColor="@color/tranns">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/redTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="My Address" />



                <com.google.android.gms.maps.MapView
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/V5dip"
                    android:clickable="false"
                    app:uiRotateGestures="false"
                    app:uiScrollGestures="false"
                    app:uiTiltGestures="false"
                    app:uiZoomGestures="false"
                    android:layout_height="150dp">

                </com.google.android.gms.maps.MapView>

                <!--<android.support.v7.widget.CardView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_marginBottom="10dp"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:layout_marginTop="@dimen/V10dip"-->
                    <!--app:cardBackgroundColor="@color/colorBottomWhite"-->
                    <!--app:cardCornerRadius="5dp"-->
                    <!--app:cardElevation="@dimen/V5dip">-->

                    <LinearLayout
                        android:id="@+id/llChangeLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/V5dip"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/location_pin" />

                        <TextView
                            android:id="@+id/tvChangeLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="Change Location"
                            android:textColor="@color/colorTextBlue" />
                    </LinearLayout>

                <!--</android.support.v7.widget.CardView>-->
                <android.support.design.widget.TextInputLayout
                    style="@style/TextInputLayout"
                    android:layout_width="match_parent">

                    <EditText
                        android:id="@+id/edtDetailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       style="@style/edittextCustom"
                        android:hint="Detail Address"
                        android:inputType="textPostalAddress" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        <!--</android.support.v7.widget.CardView>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                style="@style/textviewLayoutCUstome"

                android:layout_weight="1">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtOpenTIme"
                    style="@style/edittextCustom"
                    android:hint="Open Time"
                    android:inputType="textUri"
                    android:textColorHint="@color/white" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                style="@style/textviewLayoutCUstome"

                android:layout_weight="1"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtCloseTime"
                    style="@style/edittextCustom"
                    android:hint="Close Time"
                    android:inputType="textUri"
                    android:textColorHint="@color/white" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvPhotos"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="100dp">

            </android.support.v7.widget.RecyclerView>
            <ImageView
                android:id="@+id/ivImgAdd"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:src="@drawable/avatar"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            android:text="save"/>

    </LinearLayout>
</ScrollView>